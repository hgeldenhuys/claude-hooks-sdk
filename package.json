{
  "name": "claude-hooks-sdk",
  "version": "0.8.4",
  "description": "Type-safe TypeScript SDK for building Claude Code hook extensions with edit tracking, context correlation, transform utilities, and non-blocking error handling",
  "author": "Herman Geldenhuys <hgeldenhuys@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "docs",
    "examples",
    "sample-extension",
    ".claude-plugin",
    ".claude",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "prepublishOnly": "bun run lint && bun run build && bun test"
  },
  "keywords": [
    "claude",
    "claude-code",
    "hooks",
    "typescript",
    "sdk",
    "observability",
    "event-tracking",
    "non-blocking",
    "async",
    "ai-tools"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgeldenhuys/claude-hooks-sdk.git"
  },
  "homepage": "https://github.com/hgeldenhuys/claude-hooks-sdk#readme",
  "bugs": {
    "url": "https://github.com/hgeldenhuys/claude-hooks-sdk/issues"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "unique-names-generator": "^4.7.1"
  }
}
